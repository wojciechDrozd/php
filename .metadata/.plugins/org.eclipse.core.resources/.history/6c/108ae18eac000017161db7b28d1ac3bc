<?php

class ShopProduct{
	
	private $title;
	private $producerMainName;
	private $producerFirstName;
	protected $price;
	private $discount;
	
	public function __construct($title, $producerMainName, $producerFirstName,$price){
		$this->title = $title;
		$this->producerMainName = $producerMainName;
		$this->producerFirstName = $producerFirstName;
		$this->price = $price;
		$this->discount = 0;
		
	}
	
	public function getTitle(){
		return $this->title;
	}
	
	public function getPrice(){
		return $this->price;
	}
	
	public function getProducerFirstName(){
		return $this->producerMainName;
	}
	
	public function getProducerMainName(){
		return $this->producerMainName;
	}
	
	public function getDiscount(){
		return $this->discount;
	}
	
	public function getProducer(){
		return "{$this->getProducerFirstName()} ".
		"{$this->getProducerMainName()}";
	}
	
	public function getSummaryLine(){
		return "{$this->getTitle()} ".
		"{$this->getProducer()} ".
		"{$this->getPrice()}";
	}
	
}

$product1 = new ShopProduct("Brain", "Steven", "Kalper", 9.99);
$product1->getSummaryLine();


?>











































