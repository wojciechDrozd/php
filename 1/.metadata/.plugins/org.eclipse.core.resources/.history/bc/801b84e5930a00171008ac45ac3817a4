<?php 

$toCrawl = "http://www.wiggle.fr/running/";

function getLinks($url){
	
	$matches = array();
	$input = @file_get_contents($url);
	$regex = '<a[\s\t]*href=".*?">';
	preg_match_all("/$regex/siU",$input,$matches);

	$links = $matches[0];
	foreach($links as $link){
		echo nl2br($link);
	}
}

getLinks($toCrawl);

