<?php

abstract class Animal {
	
	private $name;
	private $age;
	private $id;
	public static $nextID = 1;
	
	public function __construct($name,$age,$id){
		$this->name=$name;
		$this->age = $age;
		$this->id = self::$nextID;
	}
}

//**********Testing area******************************************************************************************//


?>