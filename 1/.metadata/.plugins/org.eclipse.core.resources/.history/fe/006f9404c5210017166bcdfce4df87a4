<?php
// include Database connection file
require_once 'db_connection.php';

// check request
if (isset ( $_POST )) {
	// pobranie wartości
	$student_id = $_POST ['class_name'];
	$first_name = $_POST ['teacher_full_name'];
	
	// edycja danych studenta
	$query = "UPDATE przedmioty SET nr_albumu = '$student_id',
	imie = '$first_name', 
	nazwisko = '$last_name', 
	kierunek_studiow = '$major',
	semestr = '$year',
	email = '$email',
	pesel = '$pesel'
	WHERE pesel = '$pesel'";
	
	if (! $result = mysqli_query ( $con, $query )) {
		exit ( mysqli_error ( $con ) );
	}
}
?>