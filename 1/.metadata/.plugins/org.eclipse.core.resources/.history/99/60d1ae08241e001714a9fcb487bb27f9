if(isset($_POST['nr albumu']) && isset($_POST['nr albumu']) != "")
{
	// include Database connection file
	include("db_connection.php");

	// get user id
	$student_number= $_POST['nr albumu'];

	// delete User
	$query = "DELETE FROM studenci WHERE nr albumu= '	$student_number'";
	if (!$result = mysqli_query($con, $query)) {
		exit(mysqli_error($con));
	}
}
