if (isset ( $_POST['student_id']) && $_POST['student_id'] != " ") {
	
	// pobranie wartości z posta
	$student_id = $_POST['student_id'];
	$first_name = $_POST ['first_name'];
	$last_name = $_POST ['last_name'];
	$major = $_POST ['major'];
	$year = $_POST ['year'];
	$email = $_POST ['email'];
	$pesel = $_POST ['pesel'];
	
	//edycja danych w tabeli studenci
	$query = "UPDATE studenci 
	SET imie = '$first_name', 
	nazwisko = '$last_name', 
	kierunek = '$major',
	semestr = '$year',
	email = '$email',
	pesel = '$pesel'
	WHERE nrAlbumu = '$student_id'";
	
	mysqli_query ( $con, $query );
}
?>