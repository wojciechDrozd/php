	$major = $_POST['major'];
	$year = $_POST['year'];
	$email = $_POST['email'];
	$pesel = $_POST['pesel'];
	
	

	$query = "INSERT INTO studenci (imie,nazwisko,kierunek studiow,semestr,email,pesel) 
				VALUES('$first_name', '$last_name','$major','$year','$email', '$pesel')";
	
	if (!$result = mysqli_query($con, $query)) {
		echo "fail";
		//exit(mysqli_error($con));
	}
